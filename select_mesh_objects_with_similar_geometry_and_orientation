'''
This script deselects objects that have diffenrent average normal of faces than the active object
The purpose of this script is to deal with large amounts of duplicate objects

'''
import bpy,bmesh
from mathutils import Vector,Euler
from math import degrees

act = bpy.context.active_object
sel = bpy.context.selected_objects
margin = Vector((0.0001,0.0001,0.0001))

if bpy.context.object.mode == 'EDIT':
    bpy.ops.object.mode_set(mode = 'OBJECT')
    
def get_faces_normals(obj):
    bm=bmesh.new()
    bm.from_mesh(obj.data)
    face_normal=Vector((0.0,0.0,0.0))
    for face in bm.faces:
        face.select=True
        face_normal+=face.normal
    face_normal = face_normal/len(bm.faces)
    return face_normal

act_normals = get_faces_normals(act)
print("active object ",act_normals+margin)

for i in sel:
    if i != act:
        norm = get_faces_normals(i)
        print("   selected",norm)
        if (norm[0] < act_normals[0]-margin[0]) or (norm[0] > act_normals[0]+margin[0]):
            i.select = False
    else:
        continue
